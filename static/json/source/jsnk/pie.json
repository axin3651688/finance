    "items": [{
            "xtype": "chart",
            "id": "1416001",
            "text": "风险级别占比情况",
            "weight": 12,
            "showFun": function ($store) {
                return false;
            },
            "config": {
                "sql": "select r.nrange as id,count(*) as B  from dw_dimcompany c,Sys_RiskRange r where c.scode = :company and speriod = :period group by nrange order by nrange",
                "mainDim": "itemperiod",
                "random": {
                    "min": 100,
                    "max": 100000
                },
                "needDims": [
                    "year",
                    "month",
                    "company"
                ],
                "rows": [{
                    "id": 0,
                    "text": "待定"
                }, {
                    "id": 1,
                    "text": "一般风险"
                }, {
                    "id": 2,
                    "text": "中风险"
                }, {
                    "id": 3,
                    "text": "高风险"
                }],
                "columns": [{
                    "id": "text",
                    "text": "名称"
                }, {
                    "id": "B",
                    "text": "数值"
                }],
                "type": 1

            },
            "listeners": [{
                "type": "click",
                "way": "addTab",
                "sourceApi": "/cnbi/json/source/jsnk/drillSecond.json",
                "handler": ($vue, params) => {
                    console.info(params);
                    debugger;
                }
            }],
            "options": {
                "type": "singleseries",
                "getData": {
                    "type": 2,
                    "subType": "pie",
                    "columns": [{
                        "id": "text",
                        "text": "名称"
                    }, {
                        "id": "B",
                        "text": "数值"
                    }],
                    "type": 1

                },
                "listeners": [{
