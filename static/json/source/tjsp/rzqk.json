    "config": {
        "sql": "SELECT(CASE WHEN CISMENU='0' THEN '否' ELSE '是' END) AS JRJG,A.DIM_BANKNAME AS JRJGMC, C.SNAME AS RZLX,NVL(FACT_A,0) AS JKBJ ,SSTARTDATE AS QSRQ,SENDDATE AS DQRQ,FACT_B AS LL,NVL(FACT_C,0) AS ZHCB,(CASE WHEN CISGUARANTEE='0' THEN '否' ELSE '是' END) AS SFJTDB ,D.SNAME AS DBFS,SREPAYDATE AS YHKRQ,E.SNAME AS HKLY,(CASE WHEN STATUS='-1' THEN '减少' WHEN STATUS='1' THEN '新增' ELSE '不符合条件' END)AS XZ_JS, SNOTE FROM DW_FACTFINANCEDETAIL A LEFT JOIN DW_DIMFINANCE C ON A.DIM_FINANCE = C.SCODE LEFT JOIN (SELECT SCODE,SNAME FROM DW_DIMDROPMENU WHERE SPCODE='20') D ON A.DIM_GUARANTEE=D.SCODE LEFT JOIN (SELECT SCODE,SNAME FROM DW_DIMDROPMENU WHERE SPCODE='21') E ON A.DIM_REPAYSOURCE=E.SCODE WHERE DIM_COMPANY=:company AND :period BETWEEN substr(SSTARTDATE,0,6) AND substr(SENDDATE,0,6) UNION ALL SELECT '' AS JRJG,'小计' AS JRJGMC,'--' AS RZLX,SUM(NVL(FACT_A,0)) AS JKBJ,'--' AS QSRQ,'--' AS DQRQ, 0 AS LL, (CASE WHEN SUM(NVL(FACT_A,0))=0 THEN 0 ELSE ROUND((SUM(NVL(FACT_A,0)*NVL(FACT_C,0))/SUM(NVL(FACT_A,0))),4) END) AS ZHCB,'--' AS SFJTDB,'--' AS DBFS,'--' AS YHKRQ,'--' AS HKLY,'--' AS XZ_JS,'--' AS SNOTE FROM DW_FACTFINANCEDETAIL WHERE DIM_COMPANY=:company AND :period BETWEEN substr(SSTARTDATE,0,6) AND substr(SENDDATE,0,6)",
