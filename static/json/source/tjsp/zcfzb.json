        if(cv == "text2" )id = row.id_;//下钻的标识
        if( this.drillProperties.indexOf(column.property) != -1 ){
          if((row.A && row.A!=0) || (row.B && row.B!=0) || (row.A_ && row.A_!=0) || (row.B_ && row.B_!=0)){
  
