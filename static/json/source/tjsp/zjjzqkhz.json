    "__queryDataAfter":function(data,$vue){//数据的后置处理
        // debugger
      let me = this;
      let datas = [];
      me.items[0].updateView = $vue.updateView;
      me.items[0].$vue = $vue;
      data.forEach((item,index)=>{
        if((item.hbzj && item.hbzj!=0) || (item.yhck && item.yhck!=0) || (item.jzje && item.jzje!=0)){
            datas.push(item);
        }
      });    
      return datas;
